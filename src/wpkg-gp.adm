CLASS MACHINE
CATEGORY "WPKG"
	POLICY "WPKG Software installation"
		CLIENTEXT {A9B8D792-F454-11DE-BA92-FDCF56D89593}
		KEYNAME "Software\Policies\WPKG_gp"
		EXPLAIN !!PolHelp

		PART !!WpkgCommandTip1 TEXT
		END PART
		PART "WPKG command path" EDITTEXT
			VALUENAME "WpkgCommand"
		END PART

		PART !!WpkgVerbosityTip1 TEXT
		END PART
		PART "WPKG-gp Verbosity" NUMERIC DEFAULT 0 MIN 0 MAX 3 TXTCONVERT
			ValueName "WpkgVerbosity"
		END PART
		
		PART !!WpkgNetworkUsernameTip1 TEXT
		END PART
		PART "Wpkg-GP Network Username" EDITTEXT
			VALUENAME "WpkgNetworkUsername"
		END PART
		
		PART !!WpkgNetworkPasswordTip1 TEXT
		END PART
		PART !!WpkgNetworkPasswordTip2 TEXT
		END PART
		PART !!WpkgNetworkPasswordTip3 TEXT
		END PART
		PART !!WpkgNetworkPasswordTip4 TEXT
		END PART
		PART "Wpkg-GP Network Password" EDITTEXT
			VALUENAME "WpkgNetworkPassword"
		END PART
		
		PART !!WpkgMaxRebootsTip1 TEXT
		END PART
		PART "Maximum consecutive Reboots" NUMERIC DEFAULT 10 MIN 0 MAX 1000 TXTCONVERT
			VALUENAME "WpkgMaxReboots"
		END PART
			
		PART !!WpkgRebootPolicyTip1 TEXT
		END PART
		PART "WPKG-gp Reboot Policy" DROPDOWNLIST
			ValueName "WpkgRebootPolicy"
			ITEMLIST
			    NAME "Force" VALUE "force"
				Name "Ignore" VALUE "ignore"
			END ITEMLIST
		END PART
		
		PART !!WpkgExecuteByNonAdminsTip1 TEXT
		END PART
		PART "Allow" DROPDOWNLIST
			ValueName "WpkgExecuteByNonAdmins"
			ITEMLIST
				NAME "Yes" VALUE "1"
				NAME "No" VALUE "0"
			END ITEMLIST
		END PART
	END POLICY
END CATEGORY

[Strings]
PolHelp="Configures settings for WPKG-GP, a utility for running WPKG as a group policy. See http://wpkg-gp.googlecode.com/ for more info."

WpkgCommandTip1="The path to your wpkg.js or cmd/bat script for starting WPKG."

WpkgVerbosityTip1="The log level (a value between 0 and 3)."

WpkgNetworkUsernameTip1="The user name WPKG will use for connecting to the network."

WpkgNetworkPasswordTip1="The password WPKG will use when connecting to the network"
WpkgNetworkPasswordTip2="WARNING: This will be saved in clear-text in the registry."
WpkgNetworkPasswordTip3="If you want it to be encrypted, configure it via the"
WpkgNetworkPasswordTip4="wpkg-gp.ini file instead."

WpkgMaxRebootsTip1="The maximum number of consecutive reboots allowed from WPKG-gp."
WpkgMaxRebootsTip2="The default is 10 and the maximum is 1,000"

WpkgRebootPolicyTip1="Whether Wpkg-GP should initialize a reboot when required, or not."

WpkgExecuteByNonAdminsTip1="Configure whether users not in local administrator's group should be able to execute Wpkg-GP"